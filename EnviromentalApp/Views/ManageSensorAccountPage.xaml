<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EnviromentalApp.ViewModels"
             x:Class="EnviromentalApp.Views.ManageSensorAccountPage"
             Title="Sensor Account">
    <VerticalStackLayout Spacing="10" Margin="5">

        <HorizontalStackLayout Spacing="10">
            <Label Text="ID:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            <Label Text="{Binding sensorId}"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <Label Text="Date:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            <Label Text="{Binding Date}"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Editor x:Name="NameEditor"
                Placeholder="Enter sensor name"
                Text="{Binding Name}"
                HeightRequest="40" />

        <Editor x:Name="LocationEditor"
                Placeholder="Enter the sensor location"
                Text="{Binding Position}"
                HeightRequest="40" />

       <HorizontalStackLayout Spacing="10">
            <Label Text="Sensor Type:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Picker 
              SelectedItem="{Binding Type}"
              Title="Select a type" >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Weather</x:String>
                        <x:String>Air Quality</x:String>
                        <x:String>Water Quality</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>

       <HorizontalStackLayout Spacing="10">
            <Label Text="Sensor Status:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Picker 
              SelectedItem="{Binding Status}"
              Title="Select a status" >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Online</x:String>
                        <x:String>Offline</x:String>
                        <x:String>Needs Calibration</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>

        <BoxView
            HeightRequest="4"
            BackgroundColor="Gray"
            HorizontalOptions="Fill"
            Margin="0,10"/>

        <Label Text="Sensor Firmware Configuration" 
            FontAttributes="Bold"
            VerticalOptions="Center"
            TextDecorations="Underline"/>

        <BoxView
            HeightRequest="0"
            BackgroundColor="Gray"
            HorizontalOptions="Fill"
            Margin="0,10"/>

        <HorizontalStackLayout Spacing="10">
            <Label Text="Firmware Version:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <!-- Display status -->
            <Editor x:Name="FirmwareEditor"
                    Placeholder="Enter the firmware"
                    Text="{Binding firmwareVersion}"
                    HeightRequest="40" />
        </HorizontalStackLayout>

        <!-- Display measurment frequency -->
           <HorizontalStackLayout Spacing="10">
            <Label Text="Measurement Frequency:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

            <Picker 
              SelectedItem="{Binding measurementFrequency}"
              Title="Select a firmware frequency" >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Daily</x:String>
                        <x:String>Weekly</x:String>
                        <x:String>Monthly</x:String>
                        <x:String>Annualy</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>

        <!-- Display measurment frequency -->
        <HorizontalStackLayout Spacing="10">
            <Label Text="Threshold:" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>

        <!-- Display status -->
         <Entry x:Name="SensorThreshold"
            Placeholder="Enter the sensor threshold"
            Text="{Binding Threshold}"
            Keyboard="Numeric"
            HeightRequest="40" />
        </HorizontalStackLayout>
    
        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button Text="Save"
                    Command="{Binding SaveCommand}"/>
    
            <Button Grid.Column="1"
                    Text="Delete"
                    Command="{Binding DeleteCommand}"/>
    
        </Grid>
    </VerticalStackLayout>
</ContentPage>