<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EnviromentalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EnviromentalApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:Homepage}"
            Icon="{OnPlatform 'home_icon.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Sensors"
            ContentTemplate="{DataTemplate views:AllSensorsPage}"
            Icon="{OnPlatform 'sensor_icon.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Sensor Accounts"
            ContentTemplate="{DataTemplate views:AllSensorAccountsPage}"
            Icon="{OnPlatform 'sensor_icon.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate views:AllUsersPage}"
            Icon="{OnPlatform 'user_icon.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Tickets"
            ContentTemplate="{DataTemplate views:AllTicketsPage}"
            Icon="{OnPlatform 'ticket_icon.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="Weather"
            ContentTemplate="{DataTemplate views:AllWeatherMeasurementsPage}"
            Icon="{OnPlatform 'weather_icon.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Air Quality"
            ContentTemplate="{DataTemplate views:AllAirQualityMeasurementsPage}"
            Icon="{OnPlatform 'air_quality_icon.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />

        <ShellContent
            Title="Water Quality"
            ContentTemplate="{DataTemplate views:AllWaterQualityMeasurementsPage}"
            Icon="{OnPlatform 'water_quality_icon.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>
